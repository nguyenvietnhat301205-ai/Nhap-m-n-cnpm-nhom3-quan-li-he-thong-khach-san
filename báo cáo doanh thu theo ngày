from datetime import datetime
from collections import defaultdict

# ====== D·ªÆ LI·ªÜU M·∫™U ======
sales = [
    {"date": "2025-12-01", "amount": 1500000},
    {"date": "2025-12-01", "amount": 2300000},
    {"date": "2025-12-02", "amount": 1800000},
    {"date": "2025-11-30", "amount": 1200000},
    {"date": "2024-12-01", "amount": 2000000},
]

# ====== H√ÄM CHUY·ªÇN CHU·ªñI NG√ÄY SANG DATETIME ======
def parse_date(date_str):
    return datetime.strptime(date_str, "%Y-%m-%d")

# ====== B√ÅO C√ÅO THEO NG√ÄY ======
def report_by_day(sales):
    report = defaultdict(int)
    for sale in sales:
        report[sale["date"]] += sale["amount"]

    print("\nüìä B√ÅO C√ÅO DOANH THU THEO NG√ÄY")
    for date, total in sorted(report.items()):
        print(f"Ng√†y {date}: {total:,} VND")
